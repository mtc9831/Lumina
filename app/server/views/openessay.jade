doctype html
html(lang='en')
    head
        meta(name='viewport', content='width=device-width,user-scalable=yes')
        title Writing Skill Development
        link(rel='stylesheet', href='vendor/bootstrap.css')
        link(rel='stylesheet', href='vendor/jquery.countdown.css')  
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.6/socket.io.min.js')
        script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
        script(type='text/javascript', src='vendor/jquery.plugin.min.js')
        script(type='text/javascript', src='vendor/jquery.countdown.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.09/jquery.form.min.js')
        script(type='text/javascript', src='vendor/jquery.redirect.js')
        script(type='text/javascript', src='vendor/bootstrap-modal.js')
        script(type='text/javascript', src='vendor/bootstrap-transition.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.3/underscore-min.js')
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.9/backbone-min.js')
        script(type='text/javascript', src='vendor/jquery.textarea-expander.js')
        script(type='text/javascript', src='js/views/writeEssay.js')
    body
      h2 &nbsp;&nbsp;Write an essay on the topic below
      h7 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Note: You have to complete the essay within 20 minutes of time. 
      .container-fluid
        .row
          .span8
            div(style="float: left;") Time Remaining:
            div(style="float: left;", id='defaultCountdown1')  
            br
            br
            form(method='POST')
                p Topic:
                    textarea#essaycaption(name='essaycaption', disabled=true, row=1, class='expand50-200', style='clear: both;font-family: sans-serif;font-size:1em; width:900px; height:20px; padding: 2px 4px;')
                        | #{topic}
                br
                textarea#essaytxt(name='essaytxt', row=10, class='expand50-200', style='clear: both;font-family: sans-serif;font-size:1em; width:900px; height:150px; padding: 2px 4px;')
                br
                input#ev_essay.btn-info(type='button', value='Submit')

include modals/alert
include modals/confirm